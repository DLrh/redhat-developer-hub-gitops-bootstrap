apiVersion: redhatcop.redhat.io/v1alpha1
kind: GitHubSecretEngineRole
metadata:
    name: vault-github-secret-engine-role
    namespace: vault-admin
spec:
  authentication: 
    path: kubernetes
    role: policy-admin
    serviceAccount:
      name: default
  path: github
  organizationName: {{ github_org }}
  repositories: []
  permissions: 
    pull_requests: write
    metadata: read
    contents: write
    repository_hooks: write